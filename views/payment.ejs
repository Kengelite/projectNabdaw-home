<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- chart JS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- jQuery + DataTables JS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="../css/table.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <div class="">
        <!-- Top Bar -->
        <%- include('header') %>

            <div class="row">
                <!-- Sidebar -->

                <%- include('menu') %>
                    <!-- Main Content -->
                    <div class="col-12 col-md-9 col-lg-10 mt-4 px-3">
                        <div class="row">
                            <div class="col-12 col-md-6 col-xl-3 mb-3 mb-md-0">
                                <div class="card border rounded-3 shadow-sm p-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <!-- วงกลม icon -->
                                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center"
                                            style="width: 60px; height: 60px;">
                                            <i class="bi bi-receipt fs-2 text-primary"></i>
                                            <!-- หรือใช้ <i class="bi bi-bar-chart fs-4 text-primary"></i> -->
                                        </div>
                                        <!-- ข้อความ -->
                                        <div>
                                            <div class="text-secondary small">บิลทั้งหมด</div>
                                            <div class="fw-bold fs-5"> 20 </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-3 mb-3 md:mb-0">
                                <div class="card border rounded-3 shadow-sm p-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <!-- วงกลม icon -->
                                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center"
                                            style="width: 60px; height: 60px;">
                                            <i class="bi bi-check-circle-fill fs-2 text-success"></i>
                                            <!-- หรือใช้ <i class="bi bi-bar-chart fs-4 text-primary"></i> -->
                                        </div>
                                        <!-- ข้อความ -->
                                        <div>
                                            <div class="text-secondary small">ชำระแล้ว</div>
                                            <div class="fw-bold fs-5"> 20 </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-3 mb-3 md:mb-0">
                                <div class="card border rounded-3 shadow-sm p-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <!-- วงกลม icon -->
                                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center"
                                            style="width: 60px; height: 60px;">
                                            <i class="bi bi-hourglass-split fs-2 text-warning"></i>
                                            <!-- หรือใช้ <i class="bi bi-bar-chart fs-4 text-primary"></i> -->
                                        </div>
                                        <!-- ข้อความ -->
                                        <div>
                                            <div class="text-secondary small">ยังไม่ชำระ</div>
                                            <div class="fw-bold fs-5"> 20 </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-3 mb-3 md:mb-0">
                                <div class="card border rounded-3 shadow-sm p-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <!-- วงกลม icon -->
                                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center"
                                            style="width: 60px; height: 60px;">
                                            <i class="bi bi-exclamation-triangle-fill fs-2 text-danger"></i>
                                            <!-- หรือใช้ <i class="bi bi-bar-chart fs-4 text-primary"></i> -->
                                        </div>
                                        <!-- ข้อความ -->
                                        <div>
                                            <div class="text-secondary small">ค้างชำระ</div>
                                            <div class="fw-bold fs-5"> 20 </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row p-3">
                            <div class="card py-3">
                                <div class="d-flex justify-content-between mb-3">
                                    <h3>ค้างชำระ</h3>
                                    <div>
                                        <!-- <button class="btn btn-success" >ออกใบเสร็จสำหรับเดือนนี้</button> -->
                                        <button class="btn btn-success">เพิ่มข้อมูล</button>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start mb-3 align-items-center">

                                    <div class="d-flex gap-2">
                                        <select class="form-select" style="width: auto;">
                                            <option selected disabled>เลือกเดือน</option>
                                            <option value="01">มกราคม</option>
                                            <option value="02">กุมภาพันธ์</option>
                                            <option value="03">มีนาคม</option>
                                            <option value="04">เมษายน</option>
                                            <option value="05">พฤษภาคม</option>
                                            <option value="06">มิถุนายน</option>
                                            <option value="07">กรกฎาคม</option>
                                            <option value="08">สิงหาคม</option>
                                            <option value="09">กันยายน</option>
                                            <option value="10">ตุลาคม</option>
                                            <option value="11">พฤศจิกายน</option>
                                            <option value="12">ธันวาคม</option>
                                        </select>

                                        <select class="form-select" style="width: auto;">
                                            <option selected disabled>เลือกปี</option>
                                            <option value="2023">2023</option>
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table id="myDataTable" class="table table-bordered rounded">
                                        <thead class="table-light">
                                            <tr>
                                                <th>ห้อง</th>
                                                <th>ชื่อ</th>
                                                <th>สัญญา</th>
                                                <th>เบอร์ติดต่อ</th>
                                                <th>ค้างกี่เดือน</th>
                                                <th>รวมเป็นเงิน</th>
                                                <th>สถานะ</th>
                                                <th>จัดการ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- ✅ ชำระเงินแล้ว -->
                                            <tr>
                                                <td>101</td>
                                                <td>ชาติชาย คงดี</td>
                                                <td>1 ปี</td>
                                                <td>0812345678</td>
                                                <td><span class="badge bg-danger"
                                                        style="text-decoration: line-through;">2
                                                        เดือน</span></td>
                                                <td class="text-end"><del>8,000 บาท</del></td>
                                                <td><span class="badge bg-success">ชำระเงินแล้ว</span></td>
                                                <td>
                                                    <a href="/payment/detail"
                                                        class="btn btn-sm btn-outline-primary me-1">
                                                        <i class="bi bi-file-earmark-text"></i> ดูบิล
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-info me-1"
                                                        onclick="sendReminder('ชาติชาย คงดี')">
                                                        <i class="bi bi-bell"></i> แจ้งเตือน
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDelete('ห้อง 101')">
                                                        <i class="bi bi-trash"></i> ลบ
                                                    </button>
                                                </td>
                                            </tr>

                                            <!-- ✅ ยังไม่ชำระ -->
                                            <tr>
                                                <td>102</td>
                                                <td>สมหญิง ดีมาก</td>
                                                <td>6 เดือน</td>
                                                <td>0898765432</td>
                                                <td><span class="badge bg-warning text-dark">1 เดือน</span></td>
                                                <td class="text-end">4,000 บาท</td>
                                                <td><span class="badge bg-danger">ยังไม่ชำระ</span></td>
                                                <td>
                                                    <a href="/bill/detail/102"
                                                        class="btn btn-sm btn-outline-primary me-1">
                                                        <i class="bi bi-file-earmark-text"></i> ดูบิล
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-info me-1"
                                                        onclick="sendReminder('สมหญิง ดีมาก')">
                                                        <i class="bi bi-bell"></i> แจ้งเตือน
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDelete('ห้อง 102')">
                                                        <i class="bi bi-trash"></i> ลบ
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">แก้ไขข้อมูล</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body ">
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="exampleInputEmail1" class="form-label">ห้อง</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1">
                                </div>
                                <div class="mb-3 col-6">
                                    <label for="roomStatus" class="form-label">สถานะ</label>
                                    <select class="form-select" id="roomStatus" aria-label="Default select example">
                                        <option value="1">ว่าง</option>
                                        <option value="2">ไม่ว่าง</option>
                                        <option value="3">ไม่สามารถใช้งานได้</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                            <button type="button" class="btn btn-success">บันทึก</button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="selectModal" tabindex="-1" aria-labelledby="selectModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">ข้อมูล</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body ">
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="exampleInputEmail1" class="form-label">ห้อง</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" readonly>
                                </div>
                                <div class="mb-3 col-6">
                                    <label for="roomStatus" class="form-label">สถานะ</label>
                                    <select class="form-select" id="roomStatus" aria-label="Default select example"
                                        readonly>
                                        <option value="1">ว่าง</option>
                                        <option value="2">ไม่ว่าง</option>
                                        <option value="3">ไม่สามารถใช้งานได้</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="startDate" class="form-label">วันเริ่มเช่า</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate">
                                </div>
                                <div class="mb-3 col-6">
                                    <label for="endDate" class="form-label">วันสิ้นสุดสัญญา</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate">
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="exampleInputEmail1" class="form-label">ค่าห้อง</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" readonly
                                        value="3000">
                                </div>
                                <div class="mb-3 col-6">
                                    <label for="roomStatus" class="form-label">ประเภท</label>
                                    <select class="form-select" id="roomStatus" aria-label="Default select example"
                                        readonly>
                                        <option value="1">รายวัน</option>
                                        <option value="2">รายเดือน</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="waterBill" class="form-label">ค่าน้ำ (บาท)</label>
                                    <input type="number" class="form-control" id="waterBill" name="waterBill" min="0"
                                        placeholder="กรอกค่าน้ำ" value="200">
                                </div>
                                <div class="mb-3 col-6">
                                    <label for="electricBill" class="form-label">ค่าไฟ (บาท)</label>
                                    <input type="number" class="form-control" id="electricBill" name="electricBill"
                                        min="0" placeholder="กรอกค่าไฟ" value="1000">
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="exampleInputEmail1" class="form-label">เงินประกัน</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" readonly
                                        value="3000">
                                </div>
                                <div class="mb-3 col-6">
                                    <label for="exampleInputEmail1" class="form-label">สัญญา</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" readonly
                                        value="1 ปี">
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                            <button type="button" class="btn btn-success">บันทึก</button>
                        </div>

                    </div>
                </div>
            </div>
    </div>
    <script>
        const ctx = document.getElementById('myChart');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const ctxp = document.getElementById('mypieChart');

        new Chart(ctxp, {
            type: 'pie',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)'
                    ],
                    borderColor: '#fff',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#myDataTable').DataTable({
                language: {
                    search: "ค้นหา:",
                    lengthMenu: "รายการ _MENU_",
                    info: "แสดง _START_ ถึง _END_ จาก _TOTAL_ รายการ",
                    paginate: {
                        first: "หน้าแรก",
                        last: "หน้าสุดท้าย",
                        next: "ถัดไป",
                        previous: "ย้อนกลับ"
                    }
                }
            });
        });
    </script>

    <script>
        function confirmDelete(txt) {
            Swal.fire({
                title: 'คุณแน่ใจหรือไม่?',
                text: `คุณต้องการลบ ${txt} หรือไม่ ?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'ใช่, ลบเลย!',
                cancelButtonText: 'ยกเลิก',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d'
            }).then((result) => {
                if (result.isConfirmed) {
                    // TODO: ดำเนินการลบ เช่น เรียก API หรือ submit ฟอร์ม
                    Swal.fire('ลบแล้ว!', 'ข้อมูลถูกลบเรียบร้อยแล้ว', 'success');
                }
            });
        }
    </script>
    <script>
        function sendReminder(name) {
            Swal.fire({
                icon: 'info',
                title: 'แจ้งเตือนแล้ว',
                text: `ได้ส่งแจ้งเตือนไปยัง ${name}`,
                confirmButtonText: 'ตกลง'
            });
        }

        function confirmDelete(room) {
            Swal.fire({
                title: 'คุณแน่ใจหรือไม่?',
                text: `ต้องการลบข้อมูล ${room} หรือไม่?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'ใช่, ลบเลย!',
                cancelButtonText: 'ยกเลิก',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire('ลบแล้ว!', `ข้อมูลของ ${room} ถูกลบเรียบร้อย`, 'success');
                }
            });
        }
    </script>
</body>

</html>